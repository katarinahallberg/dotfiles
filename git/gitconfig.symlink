[user]
  name = Katarina Hallberg
  email = katarina.hallberg@jayway.com
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  editor = nano
  excludesfile = ~/.gitignore
  quotepath = false
  autocrlf = input
[branch]
  autosetuprebase = always
[mergetool]
  keepBackup = true
[branch "master"]
  rebase = true
  mergeoptions = --no-ff
[branch "develop"]
  rebase = true
  mergeoptions = --no-ff
[push]
  default = simple
